{
  "name": "bookmarker",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.6.2",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint:backend": "eslint apps/backend/src --ext .ts,.tsx --fix",
    "lint:frontend": "eslint apps/frontend/src --ext .ts,.tsx --fix",
    "lint:shared": "eslint packages/shared/src --ext .ts,.tsx --fix",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:shared",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "turbo": "latest",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss,html,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
